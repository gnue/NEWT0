prefix		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
NEWT		= $(bindir)/newt
SCRIPT		= inwt

all:		$(SCRIPT)

edit = sed \
	-e 's,@NEWT\@,$(NEWT),g'

$(SCRIPT):	$(SCRIPT).nwt
	$(edit) $(SCRIPT).nwt > $@

install::
	install -m 755 $(SCRIPT) $(DESTDIR)$(bindir)

clean:
	rm -f $(SCRIPT)

test:
	echo "No test defined for inwt"
